{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://nfl-website-beta.vercel.app/$1"
    },
    { "source": "/(.*)", "destination": "/" }
  ]
}
